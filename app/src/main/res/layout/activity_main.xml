<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cuadrosuperior"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgperfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image"
        android:padding="10dp"
        android:src="@mipmap/iconwoman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/namerecibe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Alma Lucia"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/cuadrosuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@mipmap/icongps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRecibe"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/image"
        android:padding="10dp"
        android:src="@mipmap/iconwoman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/recuadrotext"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/borderecibe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadrotextsend"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/bordesend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSend"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/image"
        android:padding="10dp"
        android:src="@mipmap/iconman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRecibe2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/image"
        android:padding="10dp"
        android:src="@mipmap/iconwoman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/recuadrotext2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/borderecibe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadroInvitacion"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/bordesend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textInvitacion"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:text="Te quiero invitar el dia: 00/00/00 a la hora: 12:00
        Am en el lugar: Plaza de las americas Para el restaurante : BBC
        Â¿Aceptas?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/recuadroInvitacion"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/recuadroInvitacion"
        app:layout_constraintTop_toTopOf="@+id/recuadroInvitacion" />

    <Button
        android:id="@+id/aceptarInvitacion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#000000"
        android:text="SI"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroInvitacion"
        app:layout_constraintStart_toStartOf="@+id/textInvitacion" />


    <Button
        android:id="@+id/negarInvitacion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#000000"
        android:text="NO"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroInvitacion"
        app:layout_constraintEnd_toEndOf="@+id/textInvitacion" />

    <View
        android:id="@+id/editMensaje"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/bordeseditmensaje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textEditMensaje"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="Enviar mensaje"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editMensaje"
        app:layout_constraintEnd_toEndOf="@+id/editMensaje"
        app:layout_constraintStart_toStartOf="@+id/editMensaje"
        app:layout_constraintTop_toTopOf="@+id/editMensaje" />

    <ImageView
        android:id="@+id/iconSend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="110dp"
        android:background="@mipmap/iconsend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/cuadroinferior"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


